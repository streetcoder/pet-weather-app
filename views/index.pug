extends layout

block content

  div.container

    .row
      .col-md-3
        a(href='/add' )
            button.btn.btn-primary.btn-lg(type="button" ) add new pet

      .col-md-6
        h3.text-center.text-success Does my pet need umbrella
        h4.text-center.text-info Select a pet to find out

    hr

    if (messages.error)
        .alert.alert-danger
            span= messages.error

    if (messages.success)
        .alert.alert-success
            span= messages.success

    .row
        .col-md-6
            .map-container
                div#map
        .col-md-6
            div.table-responsive
              table.table.table-striped.table-sm
                thead
                  tr
                    th(scope="col") Name
                    th(scope="col") Type
                    th(scope="col") Breed
                    th(scope="col")
                tbody
                  each pet in data
                    tr
                        td #{pet.name}
                        td #{pet.type}
                        td #{pet.breed}
                        td
                          a(href='/pet/' + pet.id) view


  script(src='/javascripts/main.js')
  script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyATQb-34Xnk5Zq_JqeuOFiLl_GzGF5uLsU&callback=initMap" async defer)
