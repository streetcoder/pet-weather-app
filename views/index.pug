extends layout

block content

  div.container

    .row
      .col-md-3
        a(href='/add' )
            button.btn.btn-primary.btn-lg(type="button" ) add new pet

      .col-md-6
        h2.text-center Does my pet need umbrella
        h4.text-center Select a pet to find out

    hr

    if (messages.error)
        .alert.alert-danger
            span= messages.error

    if (messages.success)
        .alert.alert-success
            span= messages.success

    div.table-responsive
      table.table.table-striped.table-sm
        thead
          tr
            th(scope="col") Name
            th(scope="col") Type
            th(scope="col") Breed
            th(scope="col")
        tbody
          each pet in data
            tr
                td #{pet.name}
                td #{pet.type}
                td #{pet.breed}
                td
                  a(href=api_base + end_point + '/' + pet.id) view