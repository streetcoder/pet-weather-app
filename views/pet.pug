extends layout

block content

  div.container


    .row

        .col-md-6
            h2 Pet Detail
    hr

    if (messages.error)
        .alert.alert-danger
            span= messages.error

    if (messages.success)
        .alert.alert-success
            span= messages.success

    .row
        .col-md-4

            ul.pet-details
                each pet in data
                    li <span> Name: </span>  #{pet.name}
                    li <span> Type: </span>  #{pet.type}
                    li <span> Breed: </span> #{pet.breed}
                    li <span> Location: </span> #{pet.location}
